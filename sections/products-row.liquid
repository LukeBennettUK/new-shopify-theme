

{%- for block in section.blocks -%}
  {%- assign product = all_products[block.settings.product] -%}
  
  {%- unless all_products[block.settings.product] == empty -%}
    <div>
      <a href="{{ product.url }}">
        <img src="{{ product.featured_image | img_url: '258x' }}" alt="{{ product.title | downcase}}">
      </a>
      <h3>{{ product.title }}</h3>
      <p>{{ product.description }}</p>
      <button type="button">
        <span>Add to bag</span>
        <span></span>
        <span>{{ product.price | money_without_trailing_zeros }}</span>
      </button>
    </div>
  {%- else -%}
    <div>
      <a>
        {{ 'product-1' | placeholder_svg_tag }}
      </a>
      <h3>Lorem</h3>
      <p>Lorem, ipsum dolor</p>
      <button type="button">
        <span>Add to bag</span>
        <span></span>
        <span>{{ 1000 | money_without_trailing_zeros }}</span>
      </button>
    </div>
  {%- endunless -%}
{%- endfor -%}

{%- if section.blocks.size == 0 -%}
  {%- for product in (1..4) -%}
    <div>
      <a>
        {{ 'product-1' | placeholder_svg_tag }}
      </a>
      <h3>Lorem</h3>
      <p>Lorem, ipsum dolor</p>
      <button type="button">
        <span>Add to bag</span>
        <span></span>
        <span>{{ 1000 | money_without_trailing_zeros }}</span>
      </button>
    </div>
  {%- endfor -%}
{%- endif -%}


