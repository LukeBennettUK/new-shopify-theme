<div class="first-image-container">
  {%- if section.settings.first_image -%}
    <img src="{{ section.settings.first_image | img_url: "900x" }}" alt="{{ section.settings.first_image.alt }}">
  {%- else -%}
    {{ 'product-1' | placeholder_svg_tag }}
  {%- endif -%}

  <h2 style="color: {{ section.settings.header_color }}">{{ section.settings.heading_text }}</h2>
  <a href="{{ collections[section.settings.featured_collection].url }}" style="background: {{ section.settings.link_background_color }}; color: {{ section.settings.link_color }}">{{ section.settings.link_text }}</a>
</div>

<div class="second-image-container">
  <div>
    <div class="overlay">
      {%- if section.settings.first_image -%}
        <img src="{{ section.settings.second_image | img_url: "500x" }}" alt="{{ section.settings.second_image.alt }}">
      {%- else -%}
        {{ 'product-2' | placeholder_svg_tag }}
      {%- endif -%}
    </div>
  </div>
</div>

<div class="third-image-container">
  {%- if section.settings.first_image -%}
    <img src="{{ section.settings.third_image | img_url: "500x" }}" alt="{{ section.settings.third_image.alt }}">
  {%- else -%}
    {{ 'product-3' | placeholder_svg_tag }}
  {%- endif -%}
</div>

<div class="paragraph">
  <p>{{ section.settings.paragraph_text }}</p>
</div>

{% schema %}
  {
    "name": "Image with text overlay",
    "class": "image-with-text-overlay",
    "settings": [
      {
        "type": "image_picker",
        "id": "first_image",
        "label": "First image"
      },
      {
        "type": "image_picker",
        "id": "second_image",
        "label": "Second image"
      },
      {
        "type": "image_picker",
        "id": "third_image",
        "label": "Third image"
      },
      {
        "type": "text",
        "id": "heading_text",
        "label": "Heading text",
        "default": "Lorem ipsum dolor sit"
      },
      {
        "type": "color",
        "id": "header_color",
        "label": "Header color",
        "default": "#fff"
      },
      {
        "type": "text",
        "id": "link_text",
        "label": "Link text",
        "default": "Discover the new collection"
      },
      {
        "type": "color",
        "id": "link_background_color",
        "label": "Link background color",
        "default": "#fff"
      },
      {
        "type": "color",
        "id": "link_color",
        "label": "Link text color",
        "default": "#ff0000"
      },
      {
        "type": "collection",
        "id": "featured_collection",
        "label": "Featured collection"
      },
      {
        "type": "textarea",
        "id": "paragraph_text",
        "label": "Paragraph text",
        "default": "Lorem ipsum dolor, sit amet consectetur adipisicing elit. Cum reprehenderit inventore, minus dolor fuga aspernatur exercitationem hic a eligendi quae obcaecati ipsam facere."
      }
    ],
    "presets": [
      {
        "category": "Image",
        "name": "Image with text overlay"
      }
    ]
  }
{% endschema %}
