  position: absolute;
  width: 100%;

  header {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    padding: 3.4em;

    h1 {
      position: absolute;
      left: 0;
      top: 1.7em;
      writing-mode: vertical-rl;
      padding-right: 1.7em;
      transform: rotate(180deg);
      font-size: 2em;
      white-space: nowrap;
    }

    nav a,
    svg {
