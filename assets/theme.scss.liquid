  button {
    width: 3em;
    height: 3em;
    border: none;
    outline: none;
    background: none;
    cursor: pointer;

    span {
      position: relative;
      display: block;
      height: 0.15em;
      width: 100%;
      background: white;
      transition: background .2s ease-out;

      &:before,
      &:after {
        position: absolute;
        right: 0;
        content: '';
        height: 100%;
        background: inherit;
        transition: all .2s ease-out;
      }

      &:before {
        bottom: 0.45em;
        width: 100%;
      }

      &:after {
        top: 0.45em;
        right: 0;
        width: 70%;
      }
    }
  }

  #hamburger-menu {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    width: 100%;
    height: calc(100vh - 135.78px);
    text-align: right;
    background: pink;

    a {
      width: 90%;
      padding: 50px;
      border-bottom: 1px solid white;
      transition: background .2s ease-out;

      &:hover {
        background: black;
      }
    }
  }
}